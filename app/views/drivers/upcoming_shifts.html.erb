<h1 class="mb-4">
 Upcoming <%= @current_date.strftime("%B") %> Shifts for <%= @driver.name %>
</h1>

<% content_for :title, "Driver's All Shifts" %>

<% if @shifts.any? %>
  <div class="list-group">
    <% @shifts.each do |shift| %>
      <div class="list-group-item mb-3 rounded shadow-sm">
        <div class="d-flex justify-content-between align-items-center mb-2">
          <div>
            <span class="fw-bold">Shift Date:</span>
            <span><%= shift.shift_date.strftime('%A, %b %d, %Y') %></span>
          </div>
          <%= link_to "View Shift", shift_path(shift), class: "btn btn-outline-secondary btn-sm" %>
        </div>
        <div>
          <span class="fw-bold">Type:</span>
          <span class="badge bg-info text-dark"><%= shift.shift_type %></span>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="alert alert-info mt-4" role="alert">
    No upcoming shifts assigned this month.
  </div>
<% end %>

<div class="d-flex justify-content-left mt-4">
  <%= link_to "Back", @safe_return_url, class: "btn btn-outline-secondary" %>
</div>

