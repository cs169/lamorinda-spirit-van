                id="ride_dest_address_attributes_<%= index %>_state"
                required
                autocomplete="ride-state">
        </div>

        <div class="mb-3">
            <label class="form-label" for="ride_dest_address_attributes_<%= index %>_zip">Zip</label>
            <span class="text-danger">*</span>
            <input type="text"
