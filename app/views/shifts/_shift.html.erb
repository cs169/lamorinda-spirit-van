<div id="<%= dom_id shift %>">
  <p>
    <strong>Shift date:</strong>
    <%= shift.shift_date %>
  </p>

  <p>
    <strong>Driver name:</strong>
    <%= shift.driver.name %>
  </p>

  <p>
    <strong>Shift type:</strong>
    <%= shift.shift_type %>
  </p>  

  <p>
    <strong>Van:</strong>
    <%= shift.van %>
  </p>

  <p>
    <strong>Pick-up time:</strong>
    <%= shift.pick_up_time %>
  </p>
  <p>
    <strong>Drop-off time:</strong>
    <%= shift.drop_off_time %>
  </p>
  <p>
    <strong>Odometer pre:</strong>
    <%= shift.odometer_pre %>
  </p>
  <p>
    <strong>Odometer post:</strong>
    <%= shift.odometer_post %>
  </p>
</div>
