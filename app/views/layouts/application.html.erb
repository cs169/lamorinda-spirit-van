<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Lamorinda" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <link rel="manifest" href="/manifest.json">
    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

    <!-- jQuery (Required for DataTables) -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <!-- DataTables JS Integration -->
    <script src="https://cdn.datatables.net/2.2.2/js/dataTables.js"></script>
   
    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/2.2.2/css/dataTables.dataTables.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/3.2.2/css/buttons.dataTables.css">
    
    <!-- Buttons Extension -->
    <script src="https://cdn.datatables.net/buttons/3.2.2/js/dataTables.buttons.js"></script>
    <script src="https://cdn.datatables.net/buttons/3.2.2/js/buttons.bootstrap5.js"></script>
    <script src="https://cdn.datatables.net/buttons/3.2.2/js/buttons.colVis.min.js"></script>
  
    <!-- Bootstrap CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  </head>

  <body>
    <div class="page-wrapper">
      <!-- Header with sign-in -->
      <header class="custom-header py-2 mb-3">
        <div class="container-fluid px-4">
          <div class="d-flex align-items-center justify-content-between w-100">

            <%= link_to root_path, class: "d-inline-block d-flex align-items-center" do %>
              <img src="<%= asset_path('lamorindalogo.png') %>" alt="Lafayette Spirit Van" class="app-logo white">
            <% end %>

            <div class="directories d-flex justify-content-center flex-grow-1">
              <%= link_to "Passengers", passengers_path, class: "passengers-link #{'active' if current_page?(passengers_path)}" %>
              <%= link_to "Rides", rides_path, class: "rides-link #{'active' if current_page?(rides_path)}" %>
              <%= link_to "Calendar", shifts_path, class: "shifts-link #{'active' if current_page?(shifts_path)}" %>
              <%= link_to "Drivers", drivers_path, class: "drivers-link #{'active' if current_page?(drivers_path)}" %>
            </div>

            <% if user_signed_in? %>
              <div class="d-flex align-items-center ms-3">
                <span class="text-white">Logged in as: <%= current_user.email %> (<%= current_user.role %>)</span>
                <%= button_to 'Sign Out', destroy_user_session_path, method: :delete,
                    form: { data: { turbo: 'false' } },
                    class: "btn btn-outline-light btn-sm ms-2" %>
              </div>
            <% end %>
          </div>
        </div>
      </header>

      <!-- Global Container  -->
      <div class="content-wrapper container my-4" style="max-width: 80%;">

        <!-- Flash Alerts -->
        <% if notice.present? %>
          <div class="alert alert-info text-center">
            <%= notice %>
          </div>
        <% end %>
        <% if alert.present? %>
          <div class="alert alert-warning text-center">
            <%= alert %>
          </div>
        <% end %>

        <%= yield %>
      </div>

      <!-- Footer  -->
      <footer class="custom-footer py-2 mt-3">
        <div class="container text-center">
          <p class="mb-0">City of Lafayette, CA. All Rights Reserved. Â© <%= Time.current.year %></p>
        </div>
      </footer>
    </div>
  </body>
</html>
